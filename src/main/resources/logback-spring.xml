<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <springProperty name="logging.path" source="logging.path" />
    <springProperty name="spring.application.name" source="spring.application.name"/>
<!--    <conversionRule conversionWord="isVirtualThread" converterClass="com.yubi.testSdk.interceptor.VirtualThreadLogParser" />-->

    <appender name="Console"
              class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                { "name" : "${spring.application.name}", "timestamp":"%black(%d{ISO8601})", "level": "%highlight(%-5level)", "source": { "file" : "%yellow(%C{1}):", "thread": "%blue(%t)" }, "message":  "%msg %throwable", %X{securityContext} “requestID”: "%X{X-Request-Id}"}%n
            </Pattern>
        </layout>
    </appender>

    <appender name="RollingFile"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logging.path}/testSdk.log</file>
        <encoder
                class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                { "name" : "${spring.application.name}", "timestamp":"%d{ISO8601}", "level": "%-5level", "source": { "file" : "%C{1}:", "thread": "%t" }, "message":  "%msg %replace(%throwable){'\n','\u2028'}%nopex", %X{securityContext} “requestID”: "%X{X-Request-Id}"}%n
            </Pattern>
        </encoder>

        <rollingPolicy
                class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily and when the file reaches 10 MegaBytes -->
            <fileNamePattern>${logging.path}/archived/spring-boot-logger-%d{yyyy-MM-dd}.%i.log
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>

    <!-- LOG everything at INFO level -->
    <logger name="com.yubi" level="INFO" />
    <root level="error">
        <appender-ref ref="RollingFile" />
        <appender-ref ref="Console" />
    </root>

</configuration>
